---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Steps2 from '~/components/widgets/Steps2.astro';

const metadata = {
  title: 'Welcome to Otennie: Empowering Small Businesses with Innovative Software Solutions',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    title="Welcome to Otennie Software Services"
    subtitle="Empowering Global Small Businesses with Innovative Software Solutions"
    actions={[
      { variant: 'primary', text: 'Learn More', href: '/about' },
      { text: 'Contact Us', href: '#contact' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1506748686214-e9df14d4d9d0?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80',
      alt: 'Software development team collaborating',
    }}
  />
  <Content title="About Us">
    <Fragment slot="content"
      >Founded by Miguelo Sana, a seasoned software engineer with over 15 years of experience, Otennie Software Services
      is dedicated to delivering valuable software solutions for global small businesses. We specialize in creating
      innovative software products tailored to the unique needs of our clients, and we also provide expert consulting
      services for software development projects.</Fragment
    >
  </Content>

  <Steps2
    title="Revolutionizing Coaching: Introducing Our Video Review Platform"
    subtitle="Be the First to Elevate Your Training: Join Our Exclusive Waitlist Today!"
    isReversed={true}
    callToAction={{
      text: 'Join the waitlist',
      href: '/waitlist-video-review-platform',
    }}
    items={[
      {
        title: 'Enhanced Coaching Precision',
        description:
          'Receive personalized feedback tailored to your specific coaching style and your clients unique needs. Our platform allows you to provide detailed insights and constructive criticism directly on training videos, helping your clients improve their form and technique with precision.',
        icon: 'tabler:check',
      },
      {
        title: 'Seamless Communication',
        description:
          'Effortlessly communicate with your clients and students through our platform. Streamline feedback processes and share resources, ensuring clear and effective communication for enhanced training experiences.',
        icon: 'tabler:message-star',
      },
      {
        title: 'Community Collaboration',
        description:
          'Join a thriving community of coaches and trainers who are passionate about elevating their coaching practice. Share insights, exchange ideas, and collaborate on best practices, fostering a supportive environment for professional growth and development.',
        icon: 'tabler:network',
      },
    ]}
  />

  <ContactUs
    id="contact"
    title="Let's Connect"
    subtitle="Reach Out to Us for Expert Advice and Collaborative Opportunities"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description="We typically responds within 24 business hours."
  />
</Layout>
